<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.coursework.controller.MainPageController">
    <!-- Menu Container -->
    <VBox alignment="TOP_CENTER" layoutX="-1.0" layoutY="-1.0" minWidth="200" prefHeight="600.0" prefWidth="219.0" spacing="20" style="-fx-background-color: #1e1e1f;" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="-1.0" AnchorPane.topAnchor="-1.0">
        <opaqueInsets>
            <Insets top="40.0" />
        </opaqueInsets>
        <padding>
            <Insets top="40.0" />
        </padding>
        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#switchToGroupsInCourse" text="Головна сторінка">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#switchToGroupsInCourse" text="Переглянути групи">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#switchToManageGroup" text="Налаштування групи">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#switchToAddGroup" text="Додати групу">
            <font>
                <Font size="16.0" />
            </font>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#updatePage_OnAction" text="Оновити" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </Button>
    </VBox>

    <!-- Content Container -->
    <VBox spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="220" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <children>
          <Label text="Адміністрування груп" textFill="#e1e1e1">
              <font>
                  <Font name="System Bold" size="40.0" />
              </font>
          </Label>
          <TextArea editable="false" prefHeight="208.0" prefWidth="639.0" text="Вітаю! Ви знаходитесь на головній сторінці додатку &quot;Менеджер груп&quot;.&#10;&#10;Тут ви можете переглянути групи (ПЗ, КН та ОІ) за курсом (за роком чи предметом),&#10;налаштовувати та оновлювати кожну групу власноруч: змінювати куратора групи, старосту, &#10;вилучати студента або додавати нового.&#10;&#10;Для детальнішого опису натисніть &quot;Допомога&quot;-&gt; &quot;Інструкція користувача&quot;&#10;&#10;Приємного користування!">
              <font>
                  <Font size="14.0" />
              </font>
          </TextArea>
        </children>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
   <MenuBar layoutX="20.0" layoutY="20.0" minHeight="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <menus>
         <Menu mnemonicParsing="false" text="Файл">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#save_Action" text="Зберегти" />
            </items>
         </Menu>
         <Menu mnemonicParsing="false" text="Допомога">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#goToUserInstruction_Action" text="Інструкція користувача" />
            </items>
         </Menu>
      </menus>
   </MenuBar>
</AnchorPane>
